generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Eleve {
  id         Int     @id @default(autoincrement())
  name       String
  lastname   String
  redoublant Boolean
  classeId   String
  classe     Classe  @relation(fields: [classeId], references: [id])
}

model Classe {
  id           String      @id @default(cuid())
  classerang   String      // CP-CE1-CE2-CM1-CM2
  classenom    String
  eleves       Eleve[]
  professeurId String @unique
  professeur   Professeur  @relation(fields: [professeurId], references: [id])
}

model Professeur {
  id        String   @id @default(cuid())
  name      String
  lastname  String
  login     String?  @unique
  password  String?
  classe    Classe?
}
