generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Eleve {
  id         Int     @id @default(autoincrement())
  name       String
  lastname   String
  datenaissance String
  redoublant Boolean
  classeId   Int
  classe     Classe  @relation(fields: [classeId], references: [id])
}

model Classe {
  id           Int      @id @default(autoincrement())
  classerang   String   // CP-CE1-CE2-CM1-CM2
  classenom    String?
  anneescolaire Int
  eleves       Eleve[]
  utilisateurid Int   @unique
  professeur   Utilisateur  @relation(fields: [utilisateurid], references: [id])
}

model Utilisateur  {
  id        Int   @id @default(autoincrement())
  name      String
  lastname  String
  email    String  @unique
  login     String  @unique
  password  String @default("azerty")
  role      String
  classe    Classe?
}

model CurrentYear {
  id             Int      @id @default(autoincrement())
  year           Int      @unique
}
